<div class="col-md-12" id="dracula">
  <h3 style="text-align:center">Dracula</h3>
  <p>
    <LABEL for="draculaBlood">Blood: </LABEL>
    <input type="number" id="draculaBlood">
  </p>
  <p>
    <LABEL for="draculaLocation">Location: </LABEL>
    <input type="text" class="wide" id="draculaLocation" readonly>
  </p>
  <p>
    <LABEL for="encounterCount">Encounters: </LABEL>
    <input type="number" id="encounterCount" readonly>
  </p>
  <p>
    <LABEL for="eventCount">Events: </LABEL>
    <input type="number" id="eventCount" readonly>
  </p>
  <p>
    <button id="draculaTurn">Start</button>
  </p>
</div>